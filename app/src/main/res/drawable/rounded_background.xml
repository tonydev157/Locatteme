<!-- res/drawable/rounded_gradient_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:startColor="@color/gradiente_7"
                android:centerColor="@color/gradiente_8"
                android:endColor="@color/gradiente_9"
                android:angle="45"/>
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
    <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
