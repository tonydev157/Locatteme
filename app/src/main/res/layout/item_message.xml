<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="message"
            type="com.tonymen.locatteme.model.Message" />
        <variable
            name="handler"
            type="com.tonymen.locatteme.view.adapters.MessageClickHandler" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Sent Message Layout -->
        <LinearLayout
            android:id="@+id/sentMessageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_gravity="end"
            android:padding="8dp"
            android:background="@drawable/sent_message_background">

            <TextView
                android:id="@+id/textViewMessageSent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/sentMessegue"
                android:textColor="@color/backgroundColorI"
                android:text="@{message.messageText}" />

            <ImageView
                android:id="@+id/imageViewSent"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:visibility="gone"
                android:onClick="@{() -> handler.onImageClick(message)}" />

            <VideoView
                android:id="@+id/videoViewSent"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:visibility="gone"
                android:onClick="@{() -> handler.onVideoClick(message)}" />

            <RelativeLayout
                android:id="@+id/audioLayoutSent"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_gravity="end">

                <ImageButton
                    android:id="@+id/playPauseButtonSent"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_play_arrow"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="@{() -> handler.onAudioClick(message)}" />

                <SeekBar
                    android:id="@+id/audioSeekBarSent"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/playPauseButtonSent"
                    android:layout_marginStart="8dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <TextView
                    android:id="@+id/textViewTimestampSent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:background="@color/sentMessegue"
                    android:textColor="@android:color/black"
                    android:text="@{handler.formatTimestamp(message.timestamp)}" />

                <ImageView
                    android:id="@+id/statusImageView"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_single_tick"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <!-- Received Message Layout -->
        <LinearLayout
            android:id="@+id/receivedMessageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_gravity="start"
            android:padding="8dp"
            android:background="@drawable/received_message_background">

            <TextView
                android:id="@+id/textViewMessageReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/receivedMessage"
                android:textColor="@color/backgroundColorI"
                android:text="@{message.messageText}" />

            <ImageView
                android:id="@+id/imageViewReceived"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:visibility="gone"
                android:onClick="@{() -> handler.onImageClick(message)}" />

            <VideoView
                android:id="@+id/videoViewReceived"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:visibility="gone"
                android:onClick="@{() -> handler.onVideoClick(message)}" />

            <RelativeLayout
                android:id="@+id/audioLayoutReceived"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_gravity="start">

                <ImageButton
                    android:id="@+id/playPauseButtonReceived"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_play_arrow"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="@{() -> handler.onAudioClick(message)}" />

                <SeekBar
                    android:id="@+id/audioSeekBarReceived"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/playPauseButtonReceived"
                    android:layout_marginStart="8dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textViewTimestampReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:background="@color/receivedMessage"
                android:textColor="@android:color/black"
                android:text="@{handler.formatTimestamp(message.timestamp)}" />

        </LinearLayout>
    </LinearLayout>
</layout>
