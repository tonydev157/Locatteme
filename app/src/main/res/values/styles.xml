<resources>
    <!-- Button Style -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/backgroundColor</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- EditText Style -->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/editTextTextColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- Estilo para el TextInputEditText sin borde -->
    <style name="EditTextNoBorderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/editTextTextColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/rounded_edittext_background_no_border</item> <!-- Fondo redondeado sin borde -->

    </style>

    //Cuadro de dialogo-Cambio de contraseña
    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/background_gradient</item>
    </style>
    <style name="CustomDialogTitleTextStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/primaryColor</item>
    </style>
    <!-- Estilo para el diálogo con fondo transparente -->
    <style name="TransparentDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Estilo para los botones del diálogo -->
    <style name="DialogButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>


    <!-- Estilo para el cursor transparente -->
    <style name="EditTextCursorStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
    </style>

</resources>
