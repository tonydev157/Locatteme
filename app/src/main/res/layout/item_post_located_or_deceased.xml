<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/rounded_background"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:background="@drawable/transparent_background">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/transparent_background"
            android:clipToOutline="true"
            android:outlineProvider="background"
            android:src="@drawable/ic_profile_placeholder" />

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Username"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/textColorPrimary"
            android:background="@drawable/transparent_background"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/postImageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile_placeholder"
        android:background="@drawable/rounded_image_background"
        android:clipToOutline="true"
        android:outlineProvider="background"/>

    <TextView
        android:id="@+id/estadoOverlayTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_gravity="center"
        android:text="Estado"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/textColorPrimary"
        android:background="@drawable/transparent_background" />

    <TextView
        android:id="@+id/fechaPublicacionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Publicado "
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="end"
        android:textColor="@color/textColorSecondary"
        android:background="@drawable/transparent_background" />

    <TextView
        android:id="@+id/nombresTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Nombre: "
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/textColorPrimary"
        android:background="@drawable/transparent_background" />

    <TextView
        android:id="@+id/apellidosTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Apellidos: "
        android:textSize="14sp"
        android:textColor="@color/textColorPrimary"
        android:background="@drawable/transparent_background"/>

    <TextView
        android:id="@+id/edadTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Edad: "
        android:textSize="14sp"
        android:textColor="@color/textColorPrimary"
        android:background="@drawable/transparent_background" />

    <TextView
        android:id="@+id/provinciaTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Provincia: "
        android:textSize="14sp"
        android:textColor="@color/textColorPrimary"
        android:background="@drawable/transparent_background" />

    <TextView
        android:id="@+id/ciudadTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Ciudad: "
        android:textSize="14sp"
        android:textColor="@color/textColorPrimary"
        android:background="@drawable/transparent_background"/>

    <TextView
        android:id="@+id/nacionalidadTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Nacionalidad: "
        android:textSize="14sp"
        android:textColor="@color/textColorPrimary"
        android:background="@drawable/transparent_background"/>

    <TextView
        android:id="@+id/lugarDesaparicionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Lugar de Desaparición: "
        android:textSize="14sp"
        android:textColor="@color/textColorPrimary"
        android:background="@drawable/transparent_background" />

    <TextView
        android:id="@+id/fechaDesaparicionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Fecha de Desaparición: "
        android:textSize="14sp"
        android:textColor="@color/textColorPrimary"
        android:background="@drawable/transparent_background"/>

    <TextView
        android:id="@+id/caracteristicasTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Características: "
        android:textSize="14sp"
        android:textColor="@color/textColorPrimary"
        android:background="@drawable/transparent_background" />
    <TextView
        android:id="@+id/numerosContactoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_background"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Números de contacto: "
        android:textColor="@color/textColorPrimary"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/commentIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_comment"
        android:contentDescription="@string/comment_icon_description"
        app:tint="?android:textColorPrimary"
        android:background="@color/backgroundColor"/>
</LinearLayout>
